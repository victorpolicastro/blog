<%= form_for([@post, @comment]) do |f| %>

  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row row-flex">
    <div class="col-11">
      <div class="form-group">
        <%= f.text_area :body, rows: 3, placeholder: "Leave a comment", class: 'form-control', required: true %>
      </div>
    </div>
    <div class="col-1">
      <div class="actions">
        <%= button_tag(type: 'submit', class: "btn btn-success rounded-button") do %>
          <i class="fas fa-arrow-right"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>